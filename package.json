{
    "name": "my-bookshop",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^5",
        "express": "^4",
        "hdb": "^0.18.3",
        "node-fetch": "^2.6.6"
    },
    "devDependencies": {
        "fetch": "^1.1.0",
        "jest": "^27.3.1",
        "jest-junit": "^13.0.0",
        "node": "^17.1.0",
        "sqlite3": "^5.0.2"
    },
    "scripts": {
        "test": "jest --verbose",
        "start": "cds run"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "db": {
                "kind": "sql",
                "credentials": {
                    "database": "db/my-bookshop.db"
                }
            }
        },
        "hana": {
            "deploy-format": "hdbtable"
        },
        "features": {
            "fiori_preview": true
        }
    },
    "jest": {
        "reporters": [ "default", "jest-junit" ],
        "testTimeout": 8000
    },
    "jest-junit": {
        "ancestorSeparator": " > "
    }
}
